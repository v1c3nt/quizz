    <div class="brad">
    <table class="table mt-5">
        <thead class="thead">
            <tr>
                <th scope="col">
                    <u>avatar</u>
                </th>
                <th class=" d-none d-lg-table-cell" scope="col">
                    <u>nom</u>
                </th>
                <th scope="col">
                    <u>nombre de membres</u>
                </th>
                <th class=" d-none d-md-table-cell" scope="col">
