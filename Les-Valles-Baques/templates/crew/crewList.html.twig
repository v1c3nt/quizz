                </th>
                {#
                <th scope="col">
                    <u>postulé</u>
                </th>#}
            </tr>
        </thead>
        <tbody>
            <tr>
                {% for c in crews %}
                <th scope="row">
                    {% if c.avatar is not empty %}
                    <img src="{{ vich_uploader_asset(c, 'avatarFile') | imagine_filter('mini_square') }}" alt="avatar de {{ c.name }}"
                        class="brad">
                    {% else %}
                    <img src="{{ asset('/images/avatar1.png') | imagine_filter('mini_square') }}" alt="avatar de {{ c.name }}"
                        class="brad">
                    {% endif %}
                </th>
                <td>{{c.name}}</td>
                <td class="d-none d-md-table-cell">
                    {{ members[c.id] }}
                </td>

                <td>
                    {% if quizzs[c.id] is defined %}
                    {{ quizzs[c.id] }}
                    {% else %}0
                    {% endif %}
                </td>
                {#
                <td>
                    {% if is_granted('ROLE_USER') %}
