{% extends 'base.html.twig' %}
{% block category %}active{% endblock %}
{% block title %}Les catégories !{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="col-10 offset-1">
        <div class="bubble">
            <h2 class="bubble-title">les catégories</h2>
            <div class="bubble-cat">

                {% macro recursiveCategory(category) %}
                {% dump(category) %}
                {% import _self as self %}


<p>
    {% if null == category.Parent %}<a href="#">Toute la catégorie : {{ category }}{% endif %} </a>
    {% if null != category.Parent %}<a href="#">{{ category }}{% endif %} </a>

              </p>
                {% if category.children|length %}
                <ul>
                    {% for child in category.children %}
                    {{ self.recursiveCategory(child) }}
                    {% endfor %}
                </ul>
                {% endif %}


                {% endmacro %}

                {% from _self import recursiveCategory %}

                <div class="col-6 offset-3" id="accordion">

                    {% for c in categories %}
                    {% if null == c.parent %}
                    <h4>{{ c.name }}<h4>
                            <div>
                                {{ recursiveCategory(c) }}
                            </div>
                            {% endif %}
                            {% endfor %}

                </div>
            </div>
        </div>
        {% endblock %}