{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="bubble col-6 offset-3">
        <h2 class="bubble-title">Connexion</h2>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path ('security_login') }}" method="post">
            <div class="form-group">
                <label for="username">Email</label>
                <input id="username" class="form-control" type="text" name="_username" placeholder="Email">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input id="password" class="form-control" type="password" name="_password" placeholder="Mot de passe">
            </div>

            <div class="form-group">
                <button class="btn btn-success" id="btn-login" type="submit">C'est parti !</button>
            </div>
        </form>
    </div>

{% endblock %}