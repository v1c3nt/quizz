{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h2>Page connexion</h2>

    <form action="{{ path ('security_login') }}" method="post">
        <div class="form-group">
            <label for="username">Email</label>
            <input id="username" class="form-control" type="text" name="_username" placeholder="Email">
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input id="password" class="form-control" type="password" name="_password" placeholder="Mot de passe">
        </div>

        <div class="form-group">
            <button class="btn btn-success" type="submit">C'est parti !</button>
        </div>
    </form>

{% endblock %}