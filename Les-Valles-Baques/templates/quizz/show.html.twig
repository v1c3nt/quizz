{% extends 'base.html.twig' %}

{% block title %}{{quizz.title}}
{% endblock %}

{% block body %}
    <div class="bubble col-8 offset-2">
        <h2 class="bubble-title">{{quizz.title}}</h2>
        <p>{{quizz.description}}</p>
    </div>
    {% for q in quizz.questions %}
        <div class="bubble col-6 offset-3">
            <h5>{{q.body}}</h5>
        </div>
    {% endfor %}
    <div class="bubble col-6 offset-3">
        <h4>Tu veux en voir plus et profiter du jeu alors... Go !</h4>
        {% if is_granted('ROLE_USER') %}
            <button class="btn btn-success" type="button">
                <a href="#">Jouer !</a>
            </button>
        {% else %}
            <button class="btn btn-success" type="button">
                <a href="#">Incrist-toi !</a>
            </button>
        {% endif %}
    </div>
</div>
</div>

{% endblock %}