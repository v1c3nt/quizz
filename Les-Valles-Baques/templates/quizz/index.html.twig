{% extends 'base.html.twig' %}

{% block title %}Liste des Quizz{% endblock %}

{% block body %}
    <div class="wrapper container-fluid">
        <div class="col">
            <div class="bubble">
                <h2 class="bubble-title">Les Quizz</h2>
                <div class="container">
                    <ul class="list-inline">
                        <li class="list-inline-item">A à Z</li>|
                        <li class="list-inline-item">Date</li>|
                        <li class="list-inline-item">Niveau</li>|
                        <li class="list-inline-item">Like</li>
                    </ul>
                </div>
                <button class="btn btn-danger" type="button">
                    <a href="#">Proposer Nouveau Quizz</a>
                </button>

                <div class="container mt-5">
                    {% for q in quizzes %}
                        <div class="container-fluid">
                            <div class="row">
                                <div class="category">
                                    <h4>{{q.category.name}}</h4>
                                </div>
                                <div class="triangle"></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <!--Lorsque les Quizz seront associés aux Catégories boucler avec les Catégories-->
                            <p>
                                <a href="{# path ('/quizz/play', {'username': , 'slug': q.slug}) #}">{{q.title}}</a>
                                <p>
                                    <!--Lorsque les Quizz seront associés aux Levels boucler avec les les Levels : système des étoiles Faire de même avec les Likes -->

                                    <button class="btn btn-success" type="button">
                                        <a href="#">Go !</a>
                                    </button>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}